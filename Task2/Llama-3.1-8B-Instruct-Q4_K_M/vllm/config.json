{
    "model_name": "meta-llama/Llama-3.1-8B-Instruct",
    "tokenizer_name": "meta-llama/Llama-3.1-8B-Instruct",
    "dtype": "float16",
    "tensor_parallel_size": 1,
    "gpu_memory_utilization": 0.9,
    "enforce_eager": false,
    "max_model_len": 6144,
    "max_num_seqs": 8,
    "swap_space": 6,
    "download_dir": "../transformers/hf_cache",
    "quantization": null,
    "sampling": {
        "max_tokens": 512,
        "temperature": 0.6,
        "top_p": 0.9,
        "top_k": 40,
        "repetition_penalty": 1.02
    },
    "dialogue": {
        "system_prompt": "You are Llama 3.1 8B deployed for human-robot interaction research. Provide precise, safe, and actionable guidance for robotics tasks.",
        "max_history": 6,
        "save_conversations": true,
        "conversation_dir": "conversations"
    },
    "runtime": {
        "conda_env": "EE5112Project"
    }
}
